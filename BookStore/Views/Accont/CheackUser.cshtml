@model List<UserRole>;
@{
    Layout = "~/Views/Shared/layout2.cshtml";
}

<!DOCTYPE html>

@section body
{
    <form method="post">
        <div class="container-fluid">

            <div class="glyphicon-credit-card col-xs-6">
                <div class=" panel panel-default">
                    <div class="panel-heading"><h5>AHMAD</h5></div>
                    <div class="panel-body">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                        <div>
                            <input type="hidden" asp-for="@Model[i].userid" />
                            <input type="hidden" asp-for="@Model[i].roleid" />
                            <input type="hidden" asp-for="@Model[i].name" />
                            <input type="checkbox" asp-for="@Model[i].ISSET" />
                            <label>@Model[i].name</label>

                        </div>

                        }

                    </div>
                    <div class="panel panel-footer">
                        <input type="submit" value="ubdate" action class="btn btn-success" asp-action="ubdaterole" />
                    </div>






                </div>
            </div>
        </div>
    </form>


}
